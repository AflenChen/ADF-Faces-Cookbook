<?xml version = '1.0' encoding = 'UTF-8' standalone = 'yes'?>
<jazn-data xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="http://xmlns.oracle.com/oracleas/schema/jazn-data.xsd">
  <jazn-realm default="jazn.com">
    <realm>
      <name>jazn.com</name>
    </realm>
  </jazn-realm>
  <policy-store>
    <applications>
      <application>
        <name>UsingMDS</name>
        <app-roles>
          <app-role>
            <class>oracle.security.jps.service.policystore.ApplicationRole</class>
            <name>test-all</name>
            <display-name>test-all</display-name>
            <members>
              <member>
                <class>oracle.security.jps.internal.core.principals.JpsAnonymousRoleImpl</class>
                <name>anonymous-role</name>
              </member>
            </members>
          </app-role>
        </app-roles>
        <jazn-policy>
          <grant>
            <grantee>
              <principals>
                <principal>
                  <class>oracle.security.jps.internal.core.principals.JpsAuthenticatedRoleImpl</class>
                  <name>authenticated-role</name>
                </principal>
              </principals>
            </grantee>
            <permissions>
              <permission>
                <class>oracle.adf.share.security.authorization.RegionPermission</class>
                <name>com.adffaces.hrconsumer.view.pageDefs.employeesPageDef</name>
                <actions>view</actions>
              </permission>
              <permission>
                <class>oracle.adf.controller.security.TaskFlowPermission</class>
                <name>/WEB-INF/employees-crud-flow.xml#employees-crud-flow</name>
                <actions>view</actions>
              </permission>
              <permission>
                <class>oracle.adf.controller.security.TaskFlowPermission</class>
                <name>/WEB-INF/show-department-info.xml#show-department-info</name>
                <actions>view</actions>
              </permission>
              <permission>
                <class>oracle.adf.controller.security.TaskFlowPermission</class>
                <name>/WEB-INF/templates/hr-crud-template.xml#hr-crud-template</name>
                <actions>view</actions>
              </permission>
            </permissions>
          </grant>
          <grant>
            <grantee>
              <principals>
                <principal>
                  <class>oracle.security.jps.internal.core.principals.JpsAnonymousRoleImpl</class>
                  <name>anonymous-role</name>
                </principal>
              </principals>
            </grantee>
            <permissions>
              <permission>
                <class>oracle.adf.share.security.authorization.RegionPermission</class>
                <name>templates.defaultHrTemplatePageDef</name>
                <actions>view</actions>
              </permission>
            </permissions>
          </grant>
        </jazn-policy>
      </application>
    </applications>
  </policy-store>
</jazn-data>
