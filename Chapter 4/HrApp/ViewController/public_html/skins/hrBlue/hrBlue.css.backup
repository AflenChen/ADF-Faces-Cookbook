@charset "UTF-8";

/**ADFFaces_Skin_File / DO NOT REMOVE**/
@namespace af "http://xmlns.oracle.com/adf/faces/rich";
@namespace dvt "http://xmlns.oracle.com/dss/adf/faces";

.AFDefaultFontFamily:alias {
    font-family: 'Ubuntu Condensed', sans-serif;
}

.AFDefaultFont:alias {
    font-size: 13.5pt;
}

.AFTextColor:alias {
    color: #878e83;
}

.AFTextTertiaryColor:alias {
    color: #878E83;
}

.AFTextSecondaryColor:alias {
    color: #6B7167;
}

.AFLabelColor:alias {
    color: #6B7167;
}

.AFTextPrimaryColor:alias {
    color: #878e83;
}

.AFGridCellBorderColor:alias {
    color: #fff; 
}
/*
af|column::data-cell {
    border: 0 !important;
}*/

af|column::column-header-cell {
    border: 0;
    border-color: #007897;
    border-bottom: 2px solid #007897;
    height: 30px;
    color: #007897;
    background-color: white;
}

af|table::data-row {
    height: 30px !important;
}

.hr-header-wrapper {
    background-color: #007294;
    /* 
        ADF Skinning doesn't support the following, 
        so you need to enter them manually inside the inlineStyle
        Or Create a separate css file with these entries with DISABLE_CONTENT_COMPRESSION
    */

    background-image: -moz-linear-gradient(top, #008dab, #007294);
    background-image: -webkit-linear-gradient(top, #008dab, #007294);
    background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#008dab), to(#007294));
    background-image: -ms-linear-gradient(top, #008dab, #007294);
    background-image: -o-linear-gradient(top, #008dab, #007294);
    background-image: linear-gradient(top, #008dab, #007294);
}

.hr-header-main {
    background-color: #007b9d;
    border: solid 1px #006e8b;
    padding: 20px;
    margin: 2.5% 0 2.5% 0;
    border-radius: 10px;
    box-shadow: inset 0px 0px 0px 1px #12a0bf, 0px 1px 4px 0px rgba(0, 0, 0, 0.10);
    /* 
        ADF Skinning doesn't support the following style because of the - in the beggining 
        so you need to enter them manually inside the inlineStyle
        Or Create a separate css file with these entries with DISABLE_CONTENT_COMPRESSION
    */

    background-image: -moz-linear-gradient(top, #008ead, #007b9d);
    background-image: -webkit-linear-gradient(top, #008ead, #007b9d);
    background-image: -webkit-gradient(linear, 0% 0%, 0% 100%, from(#008ead), to(#007b9d));
    background-image: -ms-linear-gradient(top, #008ead, #007b9d);
    background-image: -o-linear-gradient(top, #008ead, #007b9d);
    background-image: linear-gradient(top, #008ead, #007b9d);
}

.hr-header-title {
    color: #fff;
    text-decoration: none;
}

.hr-footer-wrapper {
    background: #E3E9DC;
}

.hr-footer-copyright {
    color: #A6A88F;
    font-size: 18px;
    display: block;
    margin: 1% 0 0 0;
}

.h1 {
    font-size: 2.4em;
    letter-spacing: -2px;
    text-transform: lowercase;
}

.AFTableCellDataHGrid:alias {
    border: 0; 
}

.AFTableCellDataVGrid:alias {
    border: 0; 
}